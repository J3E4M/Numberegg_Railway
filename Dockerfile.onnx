# Ultra-minimal Dockerfile using ONNX instead of PyTorch
# This should be well under 4GB limit
FROM python:3.11-alpine

WORKDIR /app

# Install minimal system dependencies
RUN apk add --no-cache \
    libgomp \
    libglib2.0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    curl \
    wget

# Copy minimal requirements
COPY requirements_onnx.txt requirements.txt

# Install Python packages
RUN pip install --no-cache-dir -r requirements.txt \
    && rm -rf /root/.cache/pip

# Copy application files
COPY railway_app_onnx.py .
COPY backend/yolov8n.pt .

# Create uploads directory
RUN mkdir -p /app/uploads

# Convert PyTorch model to ONNX and cleanup
RUN python -c "
import torch
from ultralytics import YOLO
print('Converting PyTorch model to ONNX...')
model = YOLO('backend/yolov8n.pt')
model.export(format='onnx', imgsz=640)
print('ONNX conversion complete')
" \
&& rm -rf backend/yolov8n.pt \
&& rm -rf /root/.cache/ultralytics \
&& rm -rf /tmp/*

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

CMD ["python", "railway_app_onnx.py"]
